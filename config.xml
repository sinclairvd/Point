<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns = "http://www.w3.org/ns/widgets"
    xmlns:gap = "http://phonegap.com/ns/1.0"
    id        = "com.maasbach.pointyouth"
    version   = "1.0.0">

<name>POiNT!</name>

<description>
POiNT! Where Youth Meet
</description>

<author href="http://www.maasbach.com" email="info@maasbach.com">
Johan Maasbach World Mission
</author>

<preference name="phonegap-version" value="2.2.0" />
<preference name="orientation" value="default" />
<preference name="target-device" value="universal" />
<preference name="fullscreen" value="false" />

<icon src="icon.png" />
    <icon src="images/icon/android/icon-36-ldpi.png"   gap:platform="android"    gap:density="ldpi" />
    <icon src="images/icon/android/icon-48-mdpi.png"   gap:platform="android"    gap:density="mdpi" />
    <icon src="images/icon/android/icon-72-hdpi.png"   gap:platform="android"    gap:density="hdpi" />
    <icon src="images/icon/android/icon-96-xhdpi.png"  gap:platform="android"    gap:density="xhdpi" />
    <icon src="images/icon/blackberry/icon-80.png"     gap:platform="blackberry" />
    <icon src="images/icon/blackberry/icon-80.png"     gap:platform="blackberry" gap:state="hover"/>
    <icon src="images/icon/ios/icon-57.png"            gap:platform="ios"        width="57" height="57" />
    <icon src="images/icon/ios/icon-72.png"            gap:platform="ios"        width="72" height="72" />
    <icon src="images/icon/ios/icon-57-2x.png"         gap:platform="ios"        width="114" height="114" />
    <icon src="images/icon/ios/icon-72-2x.png"         gap:platform="ios"        width="144" height="144" />
    <icon src="images/icon/webos/icon-64.png"          gap:platform="webos" />
    <icon src="images/icon/windows-phone/icon-48.png"  gap:platform="winphone" />
    <icon src="images/icon/windows-phone/icon-173.png" gap:platform="winphone"   gap:role="background" />
	
	<gap:splash src="images/screen/android/screen-ldpi-portrait.png"  gap:platform="android" gap:density="ldpi" />
    <gap:splash src="images/screen/android/screen-mdpi-portrait.png"  gap:platform="android" gap:density="mdpi" />
    <gap:splash src="images/screen/android/screen-hdpi-portrait.png"  gap:platform="android" gap:density="hdpi" />
    <gap:splash src="images/screen/android/screen-xhdpi-portrait.png" gap:platform="android" gap:density="xhdpi" />
	<gap:splash src="images/screen/blackberry/screen-blackberry-36.png"    gap:platform="blackberry"     width="360" height="480" />
	<gap:splash src="images/screen/blackberry/screen-blackberry-64.png"    gap:platform="blackberry"     width="640" height="480" />
	<gap:splash src="images/screen/blackberry/screen-blackberry-24.png"    gap:platform="blackberry"     width="240" height="320" />
    <gap:splash src="images/screen/ios/screen-iphone-portrait.png"    gap:platform="ios"     width="480" height="320" />
    <gap:splash src="images/screen/ios/screen-iphone-portrait-2x.png" gap:platform="ios"     width="640" height="960" />
	<gap:splash src="images/screen/ios/screen-iphone5-portrait.png" gap:platform="ios"     width="640" height="1136" />
    <gap:splash src="images/screen/ios/screen-ipad-portrait.png"      gap:platform="ios"     width="768" height="1024" />
    <gap:splash src="images/screen/ios/screen-ipad-landscape.png"     gap:platform="ios"     width="1024" height="768" />
    <gap:splash src="images/screen/windows-phone/screen-portrait.png" gap:platform="winphone" />

</widget>
